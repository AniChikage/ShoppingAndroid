<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <com.cateringpartner.cyhb.basket.RectangleView
        android:id="@+id/colorSquare"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/goodimg"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/goodname"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textSize="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/goodsingleprice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textSize="12dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/goodnum"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:textSize="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <TextView
                    android:id="@+id/goodtotalprice"
                    android:layout_weight="1"
                    android:textColor="@color/red"
                    android:gravity="center|left"
                    android:textSize="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="@dimen/main_label_textsize"
            android:textStyle="bold|italic"
            tools:ignore="UnusedAttribute"
            tools:text="A" />

    </com.cateringpartner.cyhb.basket.RectangleView>

</FrameLayout>