<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cgbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="3"
                        android:text="收款账号："
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <EditText
                        android:editable="false"
                        android:id="@+id/refundaccount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/refundalipayaccounthint"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/chooseImage"
                        android:layout_weight="3"
                        android:text="上传图片"
                        android:layout_gravity="center"
                        android:background="@color/banner"
                        android:gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="3"
                        android:text="退款说明："
                        android:gravity="left|center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/cardstyle"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="200dp">
                <EditText
                    android:id="@+id/refundreason"
                    android:textSize="16dp"
                    android:background="@null"
                    android:layout_margin="5dp"
                    android:hint="@string/maxword"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/upload"
                android:textColor="@color/white"
                android:text="提交"
                android:textSize="18dp"
                android:gravity="center"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
